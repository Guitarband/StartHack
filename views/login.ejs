    <body>
        <div class="login">
            <div class="loginContent">

            </div>
            <div class="loginForm">
                <h1>Welcome back</h1>
                <p>Sign in to your account</p>
                <form action="/login" method="POST">
                    <h3 class="loginFormTitle">Email</h3>
                    <input class="loginButton" type="text" id="username" name="username" placeholder="Enter your Email" required>
